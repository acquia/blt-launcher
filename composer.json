{
    "name": "acquia/blt-launcher",
    "description": "Provides a BLT executable for your global PATH",
    "license": "GPL-2.0-or-later",
    "require": {
        "webflo/drupal-finder": "^1.0",
        "webmozart/path-util": "^2.3",
        "padraic/phar-updater": "^1.0",
        "composer/xdebug-handler": "^1.0"
    },
    "authors": [
        {
            "name": "Acquia Engineering",
            "homepage": "https://www.acquia.com",
            "role": "Maintainer"
        }
    ],
    "bin": [
        "bin/blt"
    ],
    "config": {
        "sort-packages": true
    },
    "require-dev": {
        "acquia/coding-standards": "^0.5.0",
        "dealerdirect/phpcodesniffer-composer-installer": "^0.7.0"
    },
    "extra": {
        "phpcodesniffer-search-depth": "4"
    },
    "scripts": {
        "box-install": [
            "curl -O -L https://github.com/box-project/box/releases/download/3.9.0/box.phar"
        ],
        "box-compile": [
            "php box.phar compile"
        ]
    }
}
